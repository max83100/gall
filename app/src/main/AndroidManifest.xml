            android:name=".welding.Welding"
            android:exported="false"
            android:label="Сварочное оборудование" />
        <activity
            android:name=".phones.Phone"
            android:exported="false"
            android:label="Телефоны"
            android:theme="@style/Theme.ChartApp" />
        <activity
            android:name=".mainboard.Mainboard"
            android:exported="false"
            android:label="Материнские платы" />
        <activity
            android:name=".laptop.Laptop"
            android:exported="false"
            android:label="Ноутбуки" />
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Главное меню" />
        <activity
            android:name=".bottom.Bottom"
            android:exported="false" />
    </application>

</manifest>