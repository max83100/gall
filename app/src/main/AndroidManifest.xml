        android:supportsRtl="true"
        android:theme="@style/Theme.ChartApp">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3686339099397176~6339358005" />


        <activity
            android:name=".videocard.Videocard"
            android:exported="false" />
        <activity
            android:name=".videocard.Videocard_catalog"
            android:exported="false" />


        <activity
            android:name=".power.Power"
            android:exported="false" />
        <activity
            android:name=".power.Power_catalog"
            android:exported="false" />
        <activity
            android:name=".laptop.Laptop_catalog"
            android:exported="false" />
        <activity
            android:name=".phones.Phone_catalog"
            android:exported="false" />
        <activity
            android:name=".mainboard.Mainboard_catalog"
            android:exported="false" />
        <activity
            android:name=".welding.Welding_catalog"
            android:exported="false" />
