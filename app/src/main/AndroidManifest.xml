<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chartapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/phone_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/phone_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChartApp">
        <activity
            android:name=".laptop.Laptop_catalog"
            android:exported="false" />
        <activity
            android:name=".phones.Phone_catalog"
            android:exported="false" />
        <activity
            android:name=".mainboard.Mainboard_catalog"
            android:exported="false" />
        <activity
            android:name=".welding.Welding_catalog"
            android:exported="false" />

        <activity
            android:name=".welding.Welding"
            android:exported="false"
            android:label="Сварочное оборудование" />

        <activity
            android:name=".phones.Phone"
            android:exported="false"
            android:label="Телефоны"
            android:theme="@style/Theme.ChartApp" />
        <activity
            android:name=".mainboard.Mainboard"
            android:exported="false"
            android:label="Материнские платы" />
        <activity
            android:name=".laptop.Laptop"
            android:exported="false"
            android:label="Ноутбуки" />
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Главное меню" />
        <activity
            android:name=".bottom.Bottom"
            android:exported="false"
            />

    </application>

</manifest>